<EditForm Model="@payment" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label> Method: </label>
            <div>
                <InputText @bind-Value="payment.Method" class="form-control" style="width: 300px;" />
                <ValidationMessage For="@(() => payment.Method)" />
            </div>
        </div>
    </fieldset>
    <br />
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }

    <BackToList Target="payments" />
</EditForm>
<BottomInfo />

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Payment? payment { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
