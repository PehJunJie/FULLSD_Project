@page "/forums/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New Forums</h3>
<hr />
<br />

<ForumFormComponent ButtonText="Create Forum" forum="forum" OnValidSubmit="@CreateForums" />

@code {
    Forum forum = new Forum();

    private async Task CreateForums()
    {
        await _client.PostAsJsonAsync(Endpoints.ForumsEndpoint, forum);
        _navManager.NavigateTo("/forums/");
    }

}